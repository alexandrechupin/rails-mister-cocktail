<div class="container mt-4">

  <h1> Add a new dose </h1>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, input_html:{class:"beautiful-dropdown"} %>
    <%= f.submit "Add a new dose", class: "btn btn-primary" %>
  <% end %>

</div>
