<div class="ml-4 mt-4">

<h2> <%= @cocktail.name %> </h2>
<ul>
  <li><%= @cocktail.description %> </li>
  <li><%= @cocktail.photo %> </li>

</ul>

<ul> All doses
  <% @cocktail.doses.each do |element| %>
    <li><%= element.description %>
        <%= element.ingredient.name %>
        <%= cl_image_tag @element.photo, height: 300, width: 400, crop: :fill %>
        <%= link_to "delete", dose_path(element), method: :delete, data: {confirm: "Are you sure ?"} %>
    </li>
    <% end %>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
</ul>

<%= link_to "All cocktails", '/cocktails' %>
<br>
<%= link_to "Edit cocktail", edit_cocktail_path %>
<br>



</div>
